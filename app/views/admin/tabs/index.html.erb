<div class="container" style="margin-top: 50px">
  <h2>Страницы</h2>
  <%= link_to "Create new", new_admin_tab_path, style: "float: right", class: "btn btn-default" %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title en</th>
        <th>Title ru</th>
      </tr>
    </thead>
    <tbody>
      <% @tabs.each do |tab| %>
      <tr data-link="<%= edit_admin_tab_path(tab) %>" style="cursor: pointer">
        <td>
          <%= tab.title_en %>
        </td>
        <td>
          <%= tab.title_ru %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
  $( document ).ready(function() {
    $("tr[data-link]").click(function() {
      window.location = $(this).data('link');
    });
  });
</script>
