<div class="container" style="margin-top: 50px">
  <h2>Пользователи</h2>
  <%= link_to "Create new", new_admin_user_path, style: "float: right", class: "btn btn-default" %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Email</th>
        <th>Admin</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.email, edit_admin_user_path(user) %>
          </td>
          <td>
            <%= user.admin ? "true" : "false" %>
          </td>
          <td style="text-align: right">
            <%= link_to admin_user_path(user), method: :delete, data: {confirm: "Удалить пользователя #{user.email}?"} do %>
              <%= fa_icon "trash", style: "color: red" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
  $( document ).ready(function() {
    $("tr[data-link]").click(function() {
      window.location = $(this).data('link');
    });
  });
</script>
