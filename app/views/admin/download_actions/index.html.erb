<div class="container" style="margin-top: 50px">
  <h2>Журнал загрузок</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>File</th>
        <th>Download time</th>
      </tr>
    </thead>
    <tbody>
      <% @download_actions.each do |action| %>
        <tr>
          <td>
            <%= link_to action.user.email, edit_admin_user_path(action.user) %>
          </td>
          <td style="text-align: left">
            <%= action.filename %>
          </td>
          <td style="text-align: left">
            <%= action.created_at %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
